<?xml version="1.0" encoding="UTF-8" ?>
<web-app>
    <context-param>
        <param-name>upload</param-name>
        <param-value>/srv/uploads</param-value>
    </context-param>
    <listener>
        <listener-class>ru.job4j.controller.AppListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ru.job4j.controller.Controller</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/data</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResourceController</servlet-name>
        <servlet-class>ru.job4j.controller.ResourceController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResourceController</servlet-name>
        <url-pattern>/src/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ImageController</servlet-name>
        <servlet-class>ru.job4j.controller.ImageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageController</servlet-name>
        <url-pattern>/img</url-pattern>
    </servlet-mapping>
