        <servlet-class>ru.job4j.shop.controller.Forward</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Forward</servlet-name>
        <url-pattern>/for</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductsController</servlet-name>
        <servlet-class>ru.job4j.shop.controller.ProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.job4j.shop.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
