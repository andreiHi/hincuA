CREATE TABLE nomenclature(
  id SERIAL PRIMARY KEY ,
  name VARCHAR(50)
);
CREATE TABLE description(
  id INTEGER ,
  description VARCHAR(100)
);
INSERT INTO description(id, description) VALUES (1,'Замечательная книга'),
                                                (3,'Красный карандаш'),
                                                (5,'Зелёная машинка');
SELECT * FROM description;
INSERT INTO nomenclature(name)VALUES ('Книга'),
                                     ('Табуретка'),
                                     ('Карандаш');

SELECT *FROM nomenclature;
SELECT * FROM nomenclature INNER JOIN description ON description.id= nomenclature.id;
SELECT *FROM nomenclature INNER JOIN description USING (id);
SELECT * FROM nomenclature ,description;

--LEFT JOIN - Левостороннее внешнее объединенея

SELECT * FROM nomenclature LEFT JOIN description USING (id);
SELECT nomenclature.name, nomenclature.id FROM nomenclature LEFT JOIN description ON nomenclature.id =description.id
  WHERE description.description IS NULL;

