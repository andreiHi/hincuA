SELECT *FROM product;
SELECT DISTINCT maker FROM product WHERE NOT (type ='Laptop');
--Найти производителя, номер модели и цену каждого компьютера, имеющегося в базе данных:
SELECT maker , product.model AS  model_1 , pc.model AS  model_2, price
FROM product INNER JOIN pc ON  pc.model = product.model;

--Привести все модели ПК, их производителей и цену:
SELECT maker ,product.model AS model_1,pc.model AS model_2,price
FROM product INNER JOIN pc ON product.model = pc.model
WHERE type='PC' ORDER BY  maker, pc.model;
SELECT * FROM product

--пример с хабрахабр
CREATE TABLE books(
  bookid SERIAL PRIMARY KEY ,
  title VARCHAR(100),
  author VARCHAR(50),
  published DATE,
  stock INT
);
INSERT INTO books (title, author, published, stock) VALUES ('Scion of Ikshvaku', 'Amish Tripathi',	'2015-06-22',	2);
INSERT INTO books(title, author, published, stock) VALUES ('The Lost Symbol',	'Dan Brown',	'2010-07-22',	3);
INSERT INTO books(title, author, published, stock) VALUES ('Who Will Cry When You Die?',	'Robin Sharma',	'2006-06-15',	4);
INSERT INTO books(title, author, published, stock) VALUES ('Inferno',	'Dan Brown',	'2014-05-05',	3);
INSERT INTO books(title, author, published, stock) VALUES ('The Fault in our Stars',	'John Green',	'2015-03-01',	3);
SELECT *FROM books;
CREATE TABLE members(
  memberid SERIAL PRIMARY KEY,
  firstname VARCHAR(50),
  lastname VARCHAR(50)
);
INSERT INTO members(firstname, lastname) VALUES ('Sue',	'Mason');
INSERT INTO members(firstname, lastname) VALUES ('Ellen',	'Horton');
INSERT INTO members(firstname, lastname) VALUES ('Henry',	'Clarke');
INSERT INTO members(firstname, lastname) VALUES ('Mike',	'Willis');
INSERT INTO members(firstname, lastname) VALUES ('Lida',	'Tyler');
SELECT *FROM books;

CREATE TABLE borrowings(
  id SERIAL PRIMARY KEY,
  bookid INTEGER REFERENCES books(bookid),
  memberid INTEGER REFERENCES members(memberid),
  borrowdate DATE,
  returndate DATE
);
SELECT *FROM borrowings;
INSERT INTO borrowings(bookid, memberid, borrowdate, returndate) VALUES (1, 3,	'2016-01-20',	'2016-03-17');
